generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CravingType {
  id       Int            @id @default(autoincrement())
  name     String         @unique
  isCustom Boolean        @default(false)
  userId   String?
  events   CravingEvent[]

  @@unique([name, userId])
  @@index([userId])
}

model CravingEvent {
  id         Int          @id @default(autoincrement())
  createdAt  DateTime     @default(now())
  intensity  Int?
  notes      String?
  resolved   Boolean
  typeId     Int?
  userId     String
  resolvedAt DateTime?
  type       CravingType? @relation(fields: [typeId], references: [id])
}

model UserProgress {
  id        Int     @id @default(autoincrement())
  userId    String  @unique
  xp        Int     @default(0)
  level     Int     @default(1)
  committed Boolean @default(false)
  message   String?
  photoUrl  String?
}

model UserDailyCheckin {
  id     Int      @id @default(autoincrement())
  userId String
  date   DateTime

  @@unique([userId, date])
}
