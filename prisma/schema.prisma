generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CravingEvent {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  intensity Int?     // scale of 1â€“10
  notes     String?  // what triggered it
  resolved  Boolean  // did breathing help?
  type      String   // e.g., "food", "smoke", "drink", "cigarette", "vape", "weed", "cocaine", "heroin", "other"
}

